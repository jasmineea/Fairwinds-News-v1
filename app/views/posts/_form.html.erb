<div class="container">
     <%= form_for(@post) do |f| %> 
   
     <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category" }) %><br>
     <%= f.label :title %><br>
     <%= f.text_field :title, placeholder: "Type the post title here" %><br>
     <%= f.label :author %><br>
     <%= f.text_field :author %>
     <%= f.label :content%><br>
     <%= f.text_area :content, size: '60x12', placeholder: "Type the post tect here", :class => 'ckeditor' %><br>
     <%= f.label :image %><br>
     <%= f.file_field :image %><br>
     <%= f.submit %>
     <% end %>
</div>
